<h3>View All Contact</h3>

<table class="table table-bordered table-hover table-striped text-nowrap">
  <tr>
    <th class="w-small">ID</th>
<th>Name</th>
<th>Title</th>
<th>Email</th>
<th>Phone</th>
<th>Description</th>

    <th class="w-med">Updated</th>
    <th colspan="3" class="w-med">Manage</th>
  </tr>
  <% @contacts.each do |contact|%>
  <tr>
    <td class="w-small"><%= contact.id%></td>
<td><%= contact.name %></td>
<td><%= contact.title %></td>
<td><%= contact.email %></td>
<td><%= contact.phone %></td>
<td><%= contact.description %></td>

    <td><%= contact.updated_at.strftime('%x')%></td>

    <td><a href="/contacts/<%= contact.id %>"><span class="glyphicon glyphicon-folder-open"></span></a></td>
    <td><a href="/contacts/<%= contact.id %>/edit"><span class="glyphicon glyphicon-edit"></span></a></td>

    <td><%= erb :'contacts/_delete', layout: true, locals: { contact: contact }%></td>

  </tr>
  <% end %>
</table>


<div class="digg_pagination">
  <%#= will_paginate @contacts, renderer: BootstrapPagination::Sinatra %>
  <%#= will_paginate @contacts %>
</div>

